<!— the start of accordion —>
.accordion.accordion--open
    .accordion__title Grouped by interests
    .accordion__body
        ul.tabs.tabs--vertical
            each item, i in interest_group
                li.tabs__item
                    button.tabs__btn.btn.btn--light= item.name
                    .email__amount= item.amount
<!— the end of accordion —>

