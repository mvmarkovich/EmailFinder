.header
    .header__container.container
        <!— the start of nav —>
        nav.header__navigation
            a.header__logo(href="main.html")
            .header__nav
                ul.header__nav-list
                    each category, i in nav
                        li.header__nav-item
                            a.header__nav-link(target="_blank", href="" + category.link)= category.name

            .header__panel
                button.header__burger.btn.btn--light.btn--burger
        <!— the start of nav—>

        <!— the start of search —>
        .header__search
            form.header__search-form(action="/" method="GET")
                .header__search-block
                    input.header__search-input(type="text" name="search" placeholder="Type email adress to search")
                    span.header__search-descr We have the largest data base of email in the world. Search through 19,000,000 real emails
                button.header__search-submit.btn.btn--light.btn--search(type="submit") Search this email
                    .icon-search
        <!— the end of search —>
